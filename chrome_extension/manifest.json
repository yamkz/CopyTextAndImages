
{
  "manifest_version": 2,
  "name": "Copy Text and Image URLs",
  "description": "Copy selected text and image URLs to clipboard",
  "version": "1.0",
  "permissions": ["contextMenus"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
